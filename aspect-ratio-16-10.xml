      <variables>
         <helpsystemSystemEntries>start,a,x,left/right</helpsystemSystemEntries>
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <helpsystemSystemEntries>start,a,x,left/right</helpsystemSystemEntries>
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <helpsystemSystemEntries>start,a,x,left/right</helpsystemSystemEntries>
      </variables>
   </fontSize>

   <!--
   ///
   Gamelist
   ///
   -->
