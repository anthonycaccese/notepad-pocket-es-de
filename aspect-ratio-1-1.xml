      </image>
      <image name="polaroid-art-on">
         <pos>-0.07037037037037 0.342592592592593</pos><!-- -76 370 -->
         <cropSize>0.555555555555556 0.574074074074074</cropSize><!-- 600 620 -->
      </image>
      <image name="polaroid">
         <path>./_inc/images/1-1/system-layer-3-polaroid.png</path>
      </image>
      <image name="notepad">
         <path>./_inc/images/1-1/system-layer-6-notepad.png</path>
      </image>
      <image name="logo">
         <pos>0.507407407407407 0.45</pos><!-- 548 486 -->
         <maxSize>0.648148148148148 0.296296296296296</maxSize><!-- 700 320 -->
      </image>
      <image name="notepad-clip">
         <path>./_inc/images/1-1/system-layer-8-notepad-clip.png</path>
      </image>
      <image name="post-it">
         <path>./_inc/images/1-1/system-layer-9-post-it.png</path>
      </image>
      <image name="pen">
         <path>./_inc/images/1-1/system-layer-11-pen.png</path>
      </image>
