         <size>0.151851851851852 0</size><!-- 164 0 -->
      </text>
      <text name="post-it-text">
         <pos>0.896296296296296 0.457407407407407</pos><!-- 968 494 -->
         <size>0.151851851851852 0</size><!-- 164 0 -->
      </text>
      <helpsystem name="help">
         <entries>${helpsystemSystemEntries}</entries>
      </helpsystem>
   </view>
   <fontSize name="small">
      <variables>
         <helpsystemSystemEntries>start,a,x,left/right</helpsystemSystemEntries>
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <helpsystemSystemEntries>start,a,left/right</helpsystemSystemEntries>
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <helpsystemSystemEntries>start,a,left/right</helpsystemSystemEntries>
      </variables>
   </fontSize>

   <!--
   ///
   Gamelist
   ///
   -->
   <view name="gamelist">
      <image name="notepad">
         <path>./_inc/images/1-1/gamelist-layer-5-notepad.png</path>
      </image>
      <image name="tab-yellow-off">
         <path>./_inc/images/1-1/gamelist-layer-5-tab-yellow-off.png</path>
      </image>
      <image name="tab-blue-off">
         <path>./_inc/images/1-1/gamelist-layer-7-tab-blue-off.png</path>
      </image>
      <image name="tab-green-off">
         <path>./_inc/images/1-1/gamelist-layer-9-tab-green-off.png</path>
      </image>
      <image name="tab-red-off">
         <path>./_inc/images/1-1/gamelist-layer-11-tab-red-off.png</path>
      </image>
      <textlist name="list">
         <pos>0.07037037037037 0.177083333333333</pos><!-- 76 85 -->
         <size>0.437037037037037 0.604166666666667</size><!-- 472 290 -->
         <horizontalMargin>0.046296296296296</horizontalMargin><!-- 50 -->
