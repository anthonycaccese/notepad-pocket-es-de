         <cropSize>0.541666666666667 0.5625</cropSize><!-- 585 270 -->
         <rotation>11</rotation>
      </video>
      <image name="polaroid">
         <path>./_inc/images/1-1/gamelist-layer-15-polaroid.png</path>
      </image>
      <image name="logo">
         <pos>0.298148148148148 0.120833333333333</pos><!-- 322 58 -->
         <maxSize>0.333333333333333 0.045833333333333</maxSize><!-- 360 22 -->
      </image>
      <image name="logo-distort">
         <path>./_inc/images/1-1/gamelist-layer-20-logo-distort.png</path>
      </image>
      <helpsystem name="help">
         <entries>${helpsystemGamelistEntries}</entries>
      </helpsystem>
   </view>
   <variant name="polaroid-screenshot,polaroid-fanart">
      <view name="gamelist">
         <image name="sticker">
            <pos>0.851851851851852 0.592592592592593</pos><!-- 920 640 -->
            <maxSize>0.333333333333333 0.111111111111111</maxSize><!-- 360 120 -->
            <rotation>13</rotation>
         </image>
      </view>
   </variant>
   <fontSize name="small">
      <variables>
         <helpsystemGamelistEntries>back,start,a,x</helpsystemGamelistEntries>
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <helpsystemGamelistEntries>back,start,a</helpsystemGamelistEntries>
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <helpsystemGamelistEntries>back,start,a</helpsystemGamelistEntries>
      </variables>
   </fontSize>
</theme>