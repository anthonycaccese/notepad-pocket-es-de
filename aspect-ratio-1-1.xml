<!-- 
1:1 aspect ratio
based on 1080x1080
-->
<theme>

   <!--
   ///
   All
   ///
   -->
   <view name="system,gamelist">
      <image name="table">
         <path>./_inc/images/1-1/all-layer-0-table-${tableImageColor}.png</path>
      </image>
      <image name="paper">
         <path>./_inc/images/1-1/all-layer-2-paper.png</path>
      </image>
      <image name="disks">
         <path>./_inc/images/1-1/all-layer-3-disks.png</path>
      </image>
      <image name="paper-clips">
         <path>./_inc/images/1-1/all-layer-4-paper-clips.png</path>
      </image>
      <helpsystem name="help,help-menu-view">
         <entrySpacing>0.02</entrySpacing>
      </helpsystem>
      <helpsystem name="help">
         <pos>0.5 0.93</pos>
      </helpsystem>
   </view>

   <!--
   ///
   System
   ///
   -->
   <view name="system">
      <image name="polaroid-art-off">
